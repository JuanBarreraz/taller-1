# Leer los tres números
num1 = float(input("Por favor ingrese el primer número: "))
num2 = float(input("Por favor ingrese el segundo número: "))
num3 = float(input("Por favor ingrese el tercer número: "))

# Calcular la suma de los dos primeros números
suma = num1 + num2

# Determinar si la suma es mayor, menor o igual que el tercer número
if suma > num3:
    print("La suma de los dos primeros números es mayor que el tercer número.")
elif suma < num3:
    print("La suma de los dos primeros números es menor que el tercer número.")
else:
    print("La suma de los dos primeros números es igual al tercer número.")
